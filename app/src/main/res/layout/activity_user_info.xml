<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/phone_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/info_border"
            android:paddingBottom="@dimen/list_view_padding_bottom"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/list_view_padding_top">

            <TextView
                android:id="@+id/phoneLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/label_margin_bottom"
                android:layout_marginTop="@dimen/label_margin_top"
                android:text="@string/label_user_phone"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/label_color" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/phoneLabel"
                android:layout_marginBottom="@dimen/content_margin_bottom"
                android:layout_marginTop="@dimen/content_margin_top"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/content_color"
                android:textIsSelectable="true" />

            <ImageView
                android:id="@+id/call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:src="@drawable/phone" />

            <ImageView
                android:id="@+id/sendMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/call"
                android:src="@drawable/message" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/email_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_container"
            android:background="@drawable/info_border"
            android:paddingBottom="@dimen/list_view_padding_bottom"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/list_view_padding_top">

            <TextView
                android:id="@+id/emailLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/label_margin_bottom"
                android:layout_marginTop="@dimen/label_margin_top"
                android:text="@string/label_user_email"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/label_color" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/emailLabel"
                android:layout_marginBottom="@dimen/content_margin_bottom"
                android:layout_marginTop="@dimen/content_margin_top"
                android:hint="@string/empty_now"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/content_color"
                android:textIsSelectable="true" />

            <ImageView
                android:id="@+id/sendEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/email" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/wechat_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_container"
            android:background="@drawable/info_border"
            android:paddingBottom="@dimen/list_view_padding_bottom"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/list_view_padding_top">

            <TextView
                android:id="@+id/wechatLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/label_margin_bottom"
                android:layout_marginTop="@dimen/label_margin_top"
                android:text="@string/label_user_wechat"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/label_color" />

            <TextView
                android:id="@+id/wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/wechatLabel"
                android:layout_marginBottom="@dimen/content_margin_bottom"
                android:layout_marginTop="@dimen/content_margin_top"
                android:hint="@string/empty_now"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/content_color"
                android:textIsSelectable="true" />

        </RelativeLayout>

        <Button
            android:id="@+id/action_add_friend"
            style="@style/btn_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/wechat_container"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="24dp"
            android:text="@string/action_add_friend" />

        <Button
            android:id="@+id/action_remove_friend"
            style="@style/btn_danger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/wechat_container"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="24dp"
            android:text="@string/action_remove_friend" />


    </RelativeLayout>

</ScrollView>