<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="seaice.app.groupcontact.UserCreateActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <RelativeLayout
            android:id="@+id/field_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/user_create_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:hint="@string/enter_phone"
                android:inputType="phone" />

            <EditText
                android:id="@+id/user_create_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_create_phone"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:hint="@string/enter_password"
                android:inputType="numberPassword"
                android:maxLength="6" />

            <EditText
                android:id="@+id/user_create_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@id/user_create_password"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:hint="@string/setup_name"
                android:inputType="text" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/field_container">

            <Button
                android:id="@+id/user_create_create"
                style="@style/mybutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/action_create_user" />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>
