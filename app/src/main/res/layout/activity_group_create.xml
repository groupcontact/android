<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="seaice.app.groupcontact.GroupCreateActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <EditText
            android:id="@+id/group_create_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:hint="@string/enter_group_name" />

        <EditText
            android:id="@+id/group_create_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_create_name"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:hint="@string/enter_group_desc" />

        <TextView
            android:id="@+id/group_create_label_access"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_create_desc"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:text="@string/label_group_access"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <seaice.app.groupcontact.view.PasswordView
            android:id="@+id/group_create_access"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/group_create_label_access"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            app:borderColor="@color/passwordBorder"
            app:passwordColor="@color/passwordColor"
            app:passwordWidth="@dimen/custom_ev_password_width" />

        <TextView
            android:id="@+id/group_create_label_modify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_create_access"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:text="@string/label_group_modify"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <seaice.app.groupcontact.view.PasswordView
            android:id="@+id/group_create_modify"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/group_create_label_modify"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            app:borderColor="@color/passwordBorder"
            app:passwordColor="@color/passwordColor"
            app:passwordWidth="@dimen/custom_ev_password_width" />

        <Button
            android:id="@+id/group_create_create"
            style="@style/btn_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_create_modify"
            android:text="@string/action_create_group" />

    </RelativeLayout>

</ScrollView>