<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    tools:context="seaice.app.groupcontact.MainActivity">

    <LinearLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <seaice.app.appbase.view.NavBarView
            android:id="@id/app_base_nav_bar"
            style="@style/NavBar"
            app:navHasBackTitle="false"
            app:navLeftText="@string/app_name"
            app:navRightIcon="@mipmap/ic_action_add" />

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <seaice.app.appbase.view.TabBarView
        android:id="@+id/tabBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tabbar_bg"
        android:paddingBottom="@dimen/menu_padding"
        android:paddingTop="@dimen/menu_padding" />


</LinearLayout>